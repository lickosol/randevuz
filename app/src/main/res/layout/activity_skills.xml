<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SkillsActivity">

    <!-- Фон -->
    <ImageView
        android:id="@+id/reg_name_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/reg_back" />

    <!-- Основной контейнер -->
    <LinearLayout
        android:id="@+id/skills_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Заголовок -->
        <TextView
            android:id="@+id/textSkills"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/adigiana_ultra"
            android:text="Какие у тебя навыки?"
            android:textColor="#243B65"
            android:textSize="32sp"
            android:layout_marginBottom="20dp" />

        <!-- Поле ввода навыков -->
        <EditText
            android:id="@+id/skills_input"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Укажи свои навыки или оставь пустым"
            android:background="@drawable/upper"
            android:minHeight="48dp"
            android:textColor="#243B65"/>

        <!-- Кнопка "Дальше" -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/next_btn"
            style="@style/CustomButtonStyle"
            android:layout_width="200dp"
            android:layout_height="54dp"
            android:layout_marginTop="20dp"
            android:text="Дальше"
            android:textAllCaps="false"
            android:textSize="20sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
