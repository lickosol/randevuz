<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    >


    <TextView
        android:id="@+id/upper"
        android:layout_width="500dp"
        android:layout_height="422dp"
        android:background="@drawable/upper"
        android:text="a"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-45dp"
        tools:layout_editor_absoluteY="-66dp" />


    <LinearLayout
        android:id="@+id/email_lin"
        android:layout_width="354dp"
        android:layout_height="417dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/login_back"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="133dp">

        <TextView
            android:id="@+id/textLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/adigiana_ultra"
            android:text="Вход"
            android:textColor="#243B65"
            android:textSize="60sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.276"

            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:hint="Телефон/email"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textColor="#243B65"
            android:textColorHint="#F46174"
            android:textColorLink="#F46174" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:hint="Пароль"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColor="#243B65"
            android:textColorHint="#F46174"
            android:textColorLink="#F46174" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/regbutton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            style="@style/CustomButtonStyle"
            android:text="Войти"
            android:textAllCaps="false" />
    </LinearLayout>

    <TextView
        android:layout_width="470dp"
        android:layout_height="175dp"
        android:background="@drawable/down"
        android:text="a"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-30dp"
        tools:layout_editor_absoluteY="644dp" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_lin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Еще не знакомы?"
            android:textColor="#243B65"
            android:textSize="15sp" />

        <Button
            android:id="@+id/go_to_register_activity_tv"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:text="Зарегестрироваться"
            android:textAllCaps="false"
            android:textColor="#F46174"
            android:textSize="15sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>