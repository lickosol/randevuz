<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:gravity="end">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_bubble_outgoing"
        android:padding="8dp"
        android:maxWidth="240dp">

        <TextView
            android:id="@+id/textViewMessageContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Привет! Все круто!"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/textViewMessageTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23.05.2025 16:00"
                android:textSize="12sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/textViewReadStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Прочитано"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
