<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BirthDateActivity">


    <ImageView
        android:id="@+id/reg_name_back"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/reg_back"
        />

    <LinearLayout
        android:id="@+id/email_lin"
        android:layout_width="0dp"
        android:layout_height="312dp"
        android:layout_marginTop="170dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/adigiana_ultra"
            android:text="Когда у тебя день рождения?"
            android:gravity="center"
            android:textColor="#243B65"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="20dp"

            />



        <Button
            android:id="@+id/datePickerButton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:onClick="openDatePicker"
            android:text="Выбери дату"
            style="?android:spinnerStyle"
            android:textColor="#F46174"
            android:textSize="26sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints,UsingOnClickInXml"
            tools:layout_editor_absoluteY="325dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/next_btn"
            style="@style/CustomButtonStyle"
            android:layout_width="200dp"
            android:layout_height="54dp"
            android:layout_marginTop="30dp"
            android:text="Дальше"
            android:textAllCaps="false"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/email_lin" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>