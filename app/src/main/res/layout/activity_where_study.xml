<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NameRegisterActivity">

    <ImageView
        android:id="@+id/reg_name_back"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/reg_back"
        />

    <LinearLayout
        android:id="@+id/email_lin"
        android:layout_width="0dp"
        android:layout_height="312dp"
        android:layout_marginTop="170dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textLogin"
            android:layout_width="350dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:fontFamily="@font/adigiana_ultra"
            android:text="Где ты учишься?"
            android:textColor="#243B65"
            android:textSize="45sp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <EditText
            android:id="@+id/vuz_btn"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Введи название своего ВУЗа"
            android:background="@drawable/upper"
            android:minHeight="48dp"
            android:textColor="#243B65"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/next_btn"
            style="@style/CustomButtonStyle"
            android:layout_width="200dp"
            android:layout_height="54dp"
            android:layout_marginTop="20dp"
            android:text="Дальше"
            android:textAllCaps="false"
            android:textSize="20sp" />

    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>