<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NameRegisterActivity">


    <TextView
        android:id="@+id/upper"
        android:layout_width="519dp"
        android:layout_height="268dp"
        android:background="@drawable/upper"
        android:text="a"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-53dp"
        tools:layout_editor_absoluteY="-39dp" />

    <TextView
        android:id="@+id/hello_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/adigiana_ultra"
        android:gravity="center"
        android:text="Привет, давай дружить!"
        android:textColor="#243B65"
        android:textSize="60sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="47dp" />

    <LinearLayout
        android:id="@+id/email_lin"
        android:layout_width="325dp"
        android:layout_height="257dp"
        android:layout_marginStart="40dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="237dp">

        <TextView
            android:id="@+id/textLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/adigiana_ultra"
            android:text="Как тебя зовут?"
            android:textColor="#243B65"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.276"

            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <EditText
            android:id="@+id/name_student"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:hint="Введи сюда"
            android:gravity="center"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textColor="#243B65"
            android:textColorHint="#F46174"
            android:textColorLink="#F46174" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="477dp"
        android:layout_height="272dp"
        android:background="@drawable/down"
        android:text="a"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-33dp"
        tools:layout_editor_absoluteY="547dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/next_btn"
        style="@style/CustomButtonStyle"
        android:layout_width="200dp"
        android:layout_height="54dp"
        android:layout_marginTop="104dp"
        android:text="Дальше"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/email_lin"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="105dp" />


</androidx.constraintlayout.widget.ConstraintLayout>